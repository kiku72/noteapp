<%- include('../partials/header') %>

<section class="notes_form">
    <form action="/notes/<%=note._id%>?_method=PUT" method="POST" class="update-form">
        <p>Note created at <%= note.createDate %></p>
        <input type="text" name="title" value="<%=note.title%>"  placeholder="Header" class="new_note_header">
        <textarea 
        type="text" 
        name="content" 
        autocomplete="off" 
        rows="10"
        cols="10"
        placeholder="Your interesting thoughts here..." 
        wrap="hard">
        <%=note.content%>
    </textarea>
    <p>This was last edited on <%= note.updateDate %></p>
    <div class="button-container">
        <button type="submit">Save Note</button>
    </div>
</form>
    <form action="/notes/<%=note._id%>?_method=DELETE" method="POST" class="delete-form">
        <div class="button-container">
            <button type="submit">Delete</button>
        </div>
    </form>
</section>


<%- include('../partials/footer') %>
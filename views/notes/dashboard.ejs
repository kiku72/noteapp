<%- include('../partials/header') %>
<!-- Dashboard/Home Page -->
<h1>Dashboard</h1>

<div class="border">
    <% notes.forEach(function(note) { %>
        <!-- Entire 'box' can be clicked -->
        <a href="/notes/<%=note._id%>/edit">
            <div class="notebox">
                <p class="note_title"> <h3><%= note.title %></h3></p>
                <p class="date_update">Last changes were made on <%= note.updateDate %></p>
                <p class="note_content"><%= note.content %></p>
                <form action="/notes/<%= note.id %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">X</button>
                </form>
                <br>
            </div>
        </a>
<% }); %>
</div>

<%- include('../partials/footer') %>